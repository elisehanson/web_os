<!-- This is a form for users to sign in
the % symbol indicates that this is a ruby application
 -->


<div class="sign">
	<div class="sign-text">
		 <h3>CREATE ACCOUNT</h3>
			<%=form_for User.new do |f| %>
		  <%=f.text_field :username, :placeholder => "Username", :class => 'login'%>
      <%=f.email_field :email, :placeholder => "Email", :class => 'login' %>
      <%=f.password_field :password, :placeholder => "Password", :class => 'login' %>

			<%=f.password_field :password_confirmation, :placeholder => "Password Again", :class => 'login' %>
			<%=f.submit "Sign Up", :class => 'button', :class => 'login' %>
			<%end%>
		  <div class="tiny">
      		<%= flash[:alert] if flash[:alert] %>
         </div>
	</div>
</div>
